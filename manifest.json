{
  "name": "Auth0 Chrome Extension Sample",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "This extension demonstrates how to use Auth0 with Chrome Extensions",
  "homepage_url": "https://auth0.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/env.js",
      "src/vendor/lock.min.js",
      "src/background/background.js",
      "src/background/handler.js"
    ]
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Profile",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_security_policy": "script-src 'self' https://cdn.auth0.com blob: filesystem: chrome-extension-resource:",
  "web_accessible_resources": [
    "src/callback/*"
  ],
  "permissions": [
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "identity",
    "https://*.chromiumapp.org/auth0*",
    "https://chrome-extension-sample.auth0.com/*"
  ]
}
